@import "nib"

$navWidth = 18rem
$toggleSize = 3rem

html,
body {
  background linear-gradient(top left, #fafafa, #e0e0e0)
}

:local(.container) {
  display flex
  flex-flow column wrap
  min-height 100%
  width $navWidth
  background-color white
  transform translate3d(-($navWidth), 0, 0)
  transition all 175ms ease-in-out

  &:local(.navOpen) {
    transform translate3d(0, 0, 0)
  }
}


:local(.toggle) {
  display flex
  align-items center
  justify-content center
  padding 0
  width $toggleSize
  height $toggleSize
  margin-left auto
  transform translate3d($toggleSize + 2, 2rem, 0)
  transition all 175ms ease-in-out
  border none
  background transparent
  background-color #000

  &:active, &:focus {
    outline none
  }

  :local(.line) {
    display block
    background-color #fff
    width 50%
    height 2px
    transition all 575ms ease-in-out

    &::before, &::after {
      content " "
      display block
      margin 0 auto
      width 100%
      height 2px
      background-color #fff
      transition all 575ms ease-in-out
    }

    &::before {
      transform translate3d(0, -4px, 0)
    }

    &::after {
      transform translate3d(0, 2px, 0)
    }

    :local(.navOpen) & {
      background-color transparent

      &::before {
        transform translate3d(0, 0, 0) rotateZ(-45deg)
      }

      &::after {
        transform translate3d(0, -2px, 0) rotateZ(45deg)
      }
    }
  }

  :local(.navOpen) & {
    transform translate3d(-2rem, 0, 0)
  }
}

:local(.navList) {
  list-style none
  margin 0
  padding 0
}

:local(.navListItem) {
  @keyframes drop-in {
    from {
      opacity 0
      transform translate3d(0, -15%, 0)
    }
    to {
      opacity 1
      transform translate3d(0, 0, 0)
    }
  }

  font-size 1.675rem
  animation drop-in 175ms ease-in
  animation-fill-mode both

  & + & {
    margin-top @font-size
  }

  for n in (1...10) {
    &:nth-child({n}) {
      animation-delay 100ms * n
    }
  }
}

:local(.navListItemLink) {
  text-decoration none
}
