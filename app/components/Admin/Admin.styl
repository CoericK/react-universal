@import "nib"

normalize-css()

*,
*::before,
*::after {
  box-sizing border-box
}

html {
  font-size 62.5%
}

h1,
h2,
h3,
h4,
h5,
h6 {
  margin 0
  padding 0
}

h2 {
  font-weight 100
  font-size 5rem
}

:local(.container) {
  display flex
  transition all 175ms ease
  min-height 100vh
  border 0 solid white

  &:local(.navOpen) {
    border 3rem solid white
  }
}

:local(.outlet) {
  padding 2rem
}
